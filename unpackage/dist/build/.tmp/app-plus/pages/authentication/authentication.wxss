.authentication {
  padding: 40rpx 15rpx 0;
}
.authentication view text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333333;
}
.authentication view .shade_image {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  margin: 40rpx auto;
  width: 500rpx;
  height: 288rpx;
  background: #f6f6f6;
}
.authentication view .shade_image image {
  width: 80rpx;
  height: 80rpx;
}
.authentication button {
  margin: 0 80rpx;
  width: auto;
  line-height: 100rpx;
  background: #fad42a;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333333;
}

