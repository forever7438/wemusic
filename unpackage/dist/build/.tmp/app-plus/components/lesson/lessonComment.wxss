.lesson_comment {
  padding: 20rpx 30rpx 0;
}
.lesson_comment .teacher_class {
  margin: 40rpx 0;
  font-size: 48rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333333;
}
.lesson_comment .comment {
  margin: 20rpx 0;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e7e8ea;
}
.lesson_comment .comment .comment_infos {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  margin-bottom: 20rpx;
  /* padding: 0 20upx; */
}
.lesson_comment .comment .comment_infos image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.lesson_comment .comment .comment_infos .comment_info {
  position: relative;
  margin: 0 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: end;
      -ms-flex-align: end;
          align-items: end;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}
.lesson_comment .comment .comment_infos .comment_info .comment_title {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #333333;
}
.lesson_comment .comment .comment_infos .comment_info .lesson_class {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
}
.lesson_comment .comment_content {
  /* padding: 0 20upx; */
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
}

