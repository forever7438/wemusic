.submit {
  width: auto;
  position: fixed;
  bottom: 10rpx;
  left: 0;
  padding: 10rpx 40rpx;
  background-color: #fff;
}
.submit input {
  float: left;
  width: 540rpx;
  margin-right: 10rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  background: #f0f2f7;
  border-radius: 12rpx;
  padding-left: 10rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #999999;
}
.submit text {
  float: right;
  text-align: center;
  width: 116rpx;
  line-height: 52rpx;
  background: #fad42a;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
}

